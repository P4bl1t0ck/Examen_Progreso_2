<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExamenProgreso2.Aboutme"
             Title="Aboutme">
    <ScrollView>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            
            <Rectangle Grid.Row="0" Grid.Column="0" Fill="Black"/>
            <Label Text="Nombre: Pablo Montalvo"
           WidthRequest="200" />

            <Rectangle Grid.Row="0" Grid.Column="1" Fill="Black" />
            <Label Grid.Column="1" Text="Fecha:05/06/2025"
            WidthRequest="200" />

            <Rectangle Grid.Row="1" Grid.Column="0" Fill="Black" />
            <Label Grid.Row="1" Text="Intereses: Tecnologia"
            WidthRequest="200" />

            <Rectangle Grid.Row="1" Grid.Column="1" Fill="Black"/>
            <Label Grid.Column="1"
                   Grid.Row="1"
                   Text="Version 1.0"
            WidthRequest="200" />
            
        </Grid>
    </ScrollView>
</ContentPage>